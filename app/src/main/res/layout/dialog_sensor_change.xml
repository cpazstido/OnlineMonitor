<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/sensor_name"
            android:textColor="#80000000"
            android:textSize="@dimen/customTitle" />

        <Spinner
            android:id="@+id/dialog_sensor_name"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            android:textSize="@dimen/customEntry"
            android:layout_height="wrap_content"/>

        <TextView
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/sensor_identifier"
            android:textColor="#80000000"
            android:textSize="@dimen/customTitle" />

        <EditText
            android:id="@+id/dialog_sensor_identifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            android:textSize="@dimen/customEntry" />
    </LinearLayout>

</ScrollView>