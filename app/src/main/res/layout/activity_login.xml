<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_account"
        android:textColor="@color/md_white_1000"
        android:hint="@string/input_account"
        android:text="hbdl"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:layout_alignLeft="@+id/login_pwd"
        android:layout_alignStart="@+id/login_pwd"
        android:layout_alignRight="@+id/login_pwd"
        android:gravity="center"
        android:layout_alignEnd="@+id/login_pwd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="@color/md_white_1000"
        android:hint="@string/input_password"
        android:text="123456"
        android:gravity="center"
        android:id="@+id/login_pwd"
        android:layout_below="@+id/login_account"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号"
        android:textSize="@dimen/mSubhead"
        android:textColor="@color/md_white_1000"
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_alignTop="@id/login_account"
        android:layout_toLeftOf="@id/login_account"
        android:layout_alignBottom="@id/login_account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="密码"
        android:textSize="@dimen/mSubhead"
        android:textColor="@color/md_white_1000"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/login_pwd"
        android:layout_toLeftOf="@+id/login_pwd"
        android:layout_alignTop="@+id/login_pwd" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_pwd"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/login_pwd"
        android:layout_alignEnd="@+id/login_pwd">

        <com.rey.material.widget.Button
            style="@style/FlatColorButtonRippleStyle"
            android:id="@+id/login_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="0.4"
            android:textColor="#FFFFFFFF"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
            android:text="@string/login"
            app:rd_delayClick="afterRelease"/>

        <com.rey.material.widget.Button
            style="@style/FlatColorButtonRippleStyle"
            android:id="@+id/rest_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="0.4"
            android:textColor="#FFFFFFFF"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
            android:text="@string/reset"
            app:rd_delayClick="afterRelease"/>

    </LinearLayout>

</RelativeLayout>
